{
  "manifest_version": 3,
  "name": "{{extensionDisplayName}}",
  "version": "1.0.0",
  "description": "{{extensionDescription}}",
  "homepage_url": "https://github.com/{{githubUsername}}/{{extensionName}}",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "https://example.com/*"
      ],
      "js": [
        "src/content/index.ts"
      ],
      "css": [
        "styles/content.css"
      ],
      "run_at": "document_idle"
    }
  ]
}

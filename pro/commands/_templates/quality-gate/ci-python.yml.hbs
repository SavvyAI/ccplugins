name: CI

on:
  push:
    branches: [main, master]
  pull_request:
    branches: [main, master]

jobs:
  quality:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.12'
          cache: 'pip'

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          {{#if hasRequirements}}
          pip install -r requirements.txt
          {{/if}}
          {{#if hasSetupPy}}
          pip install -e ".[dev]"
          {{/if}}
          {{#if hasPyproject}}
          pip install -e ".[dev]"
          {{/if}}

      {{#if buildCommand}}
      - name: Build / Type Check
        run: {{buildCommand}}
      {{/if}}

      {{#if lintCommand}}
      - name: Lint
        run: {{lintCommand}}
      {{/if}}

      {{#if testCommand}}
      - name: Test
        run: {{testCommand}}
      {{/if}}

#!/bin/sh
# Pre-commit hook - mirrors CI checks for fast local feedback
# Generated by /pro:quality-gate

set -e

echo "Running pre-commit checks..."

{{#if useLintStaged}}
# Run lint-staged for incremental checks on staged files
npx lint-staged
{{else}}
{{#if buildCommand}}
echo "Build check..."
{{buildCommand}}
{{/if}}

{{#if lintCommand}}
echo "Lint check..."
{{lintCommand}}
{{/if}}
{{/if}}

echo "Pre-commit checks passed!"
